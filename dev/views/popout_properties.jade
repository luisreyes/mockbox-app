extends mockbox_popout.jade

block title
  span Prototype Properties
block titleIcon
  span.icon_cog

block content
  section.view-properties

    //- SIDEBAR
    section#properties-options.sidebar
      ul    
        
        li.html-properties.transition
          section.item
          span HTML

        li.css-properties.transition
          section.item
          span CSS


        li.js-properties.transition
          section.item
          span JavaScript


    //- PANELS
    section#properties-panels.properties-options.panels
      ul
        //- HTML PANEL
        li.html-properties.panel.hidden
          
          section.field
            section.field-title
            section.field-option

              span.left-container
                span Preprocessor
              span.right-container 
                select.input#properties-lib-select
                  option None
                  option Haml
                  option Jade

              section.clear

          section.field
            section.field-title
            
              span
                span Head includes
              section.clear
              textarea(placeholder='<meta name="viewport" content="initial-scale=1, minimal-ui">')

              section.clear

        //- CSS PANEL
        li.css-properties.panel
          section.field
            section.field-title
            section.field-option

              span.left-container
                span Preprocessor
              span.right-container 
                select.input#properties-lib-select
                  option None
                  option SCSS
                  option Less
                  option Stylus

              section.clear

          section.field
            section.field-title          
            section.field-option

              span.left-container
                span Normalize
                section.clear              
              span.right-container
                label.switch
                  input(type="checkbox").normalize-css.switch-input
                  span(data-on="On" data-off="Off").switch-label
                  span.switch-handle.transition
              section.clear

              span.left-container
                span Animate.css
                section.clear              
              span.right-container
                label.switch
                  input(type="checkbox").animate-css.switch-input
                  span(data-on="On" data-off="Off").switch-label
                  span.switch-handle.transition
              section.clear

          section.field
            section.field-title
            
              span
                span External Source(s)
                span.small.floatRight Separate by comma for multiple sources
              section.clear
              textarea(placeholder="http://.css")
              section.clear


        //- JS PANEL
        li.js-properties.panel.hidden

          section.field
            section.field-title
            section.field-option

              span.left-container
                span Preprocessor
              span.right-container 
                select.input#properties-lib-select
                  option None
                  option CoffeeScript
                  option LiveScript

              section.clear
          
          section.field
            section.field-title
            section.field-option

              span.left-container
                span Framework
              span.right-container 
                select.input#properties-lib-select
                  option None
                  option jQuery 1.11.1
                  option jQuery 2.1.1
                  option Angular 1.2.25

              section.clear

          section.field
            section.field-title
            section.field-option

              span.left-container
                span Apollo
              span.right-container 
                label.switch
                  input(type="checkbox").normalize.switch-input
                  span(data-on="On" data-off="Off").switch-label
                  span.switch-handle.transition

              span.left-container
                span Modernizer
                section.clear
              span.right-container
                label.switch
                  input(type="checkbox" checked).modernizer.switch-input
                  span(data-on="On" data-off="Off").switch-label
                  span.switch-handle.transition

              section.clear

          section.field
            section.field-title
              
              span
                span External Source(s)
                span.small.floatRight Separate by comma for multiple sources
              section.clear
              textarea(placeholder="http://.js")

              section.clear
          
  footer#properties-footer
    button.cancel cancel
    button.ok ok